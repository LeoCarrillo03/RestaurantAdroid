<!-- activity_nosotros.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Encabezado con Imagen y Texto Descriptivo -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Imagen de Fondo -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/fondo"
            android:scaleType="centerCrop"
            android:src="@drawable/fondo" />

        <!-- Capa Gris Semitransparente -->
        <View
            android:layout_width="match_parent"
            android:layout_height="180dp" />

        <!-- Texto Descriptivo -->
        <TextView
            android:id="@+id/textDescriptivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="¡Bienvenido a Vaya Caldo!\n Disfruta de la exquisita cocina peruana en un ambiente único. ¡Sabores auténticos que deleitarán tu paladar!"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp" />

    </FrameLayout>

    <!-- Fondo Blanco y Secciones Adicionales -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_gradient"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp">

        <!-- Sección de Misión -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <!-- Imagen de Misión -->
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/mision"
                android:layout_alignParentEnd="true" />

            <!-- Texto de Misión -->
            <TextView
                android:id="@+id/textMision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Misión: Proporcionar experiencias gastronómicas excepcionales a nuestros fieles y futuros clientes."
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="8dp" />
        </RelativeLayout>

        <!-- Sección de Visión -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <!-- Texto de Visión -->
            <TextView
                android:id="@+id/textVision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visión: Ser reconocidos como el mejor restaurante de la región, destacando por excelencia y autenticidad culinaria."
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginStart="70dp"
                android:layout_marginBottom="8dp" />

            <!-- Imagen de Visión -->
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/vision"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <!-- Separador decorativo -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="#B2DFDB" />

        <!-- Sección de Nuestro Equipo -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <!-- Título Nuestro Equipo -->
            <TextView
                android:id="@+id/tituloNuestroEquipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nuestro Equipo"
                android:textColor="#FAFAFA"
                android:textSize="16sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/border"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="5dp"/>

            <!-- Imagen de Nuestro Equipo -->
            <ImageView
                android:id="@+id/imagenNuestroEquipo"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:src="@drawable/equipo"
                android:layout_below="@id/tituloNuestroEquipo"
                android:layout_centerHorizontal="true"
                android:background="#FFFFFF"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="80dp"
                android:layout_marginTop="8dp"/>

            <!-- Texto de Nuestro Equipo -->
            <TextView
                android:id="@+id/textNuestroEquipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Conoce al talentoso equipo que hace posible cada experiencia gastronómica."
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_below="@id/imagenNuestroEquipo"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"/>
        </RelativeLayout>

        <!-- Botón para Volver al Inicio -->
        <Button
            android:id="@+id/btnVolverInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver al Inicio"
            android:layout_gravity="center"
            android:backgroundTint="#004D40"
            android:textColor="@android:color/background_light"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

</LinearLayout>
