<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrincipalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="-22dp"
        android:background="@android:drawable/dialog_holo_dark_frame"
        android:backgroundTint="#018878"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="62dp"
                android:layout_marginTop="32dp"
                android:layout_weight="1"
                android:background="@android:drawable/checkbox_off_background"
                android:backgroundTint="#1CBCAB"
                android:fontFamily="@font/baloo"
                android:gravity="center"
                android:text="VAYA CALDO"
                android:textColor="#FFFFFF"
                android:textSize="34sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:height="100dp"
                android:backgroundTint="#FFFFFF"
                android:drawableTop="@drawable/icon_menu"
                android:fontFamily="@font/baloo"
                android:text="MENUS"
                android:textColor="#018678"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnBebidas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:height="100dp"
                android:backgroundTint="#FFFFFF"
                android:drawableTop="@drawable/icon_bebida"
                android:fontFamily="@font/baloo"
                android:text="BEBIDAS"
                android:textColor="#018778"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="129dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/butAmbiente"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:height="100dp"
                android:backgroundTint="#E3F3F1"
                android:drawableTop="@drawable/icon_reserva"
                android:fontFamily="@font/baloo"
                android:text="RESERVAS"
                android:textColor="#018778"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnUbicacion"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:height="100dp"
                android:backgroundTint="#E3F3F1"
                android:drawableTop="@drawable/icon_mapa"
                android:fontFamily="@font/baloo"
                android:text="UBICACION"
                android:textColor="#018778"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:backgroundTint="#018978"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnNosotros"
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:layout_weight="1"
                android:height="100dp"
                android:backgroundTint="#E3F3F1"
                android:drawableLeft="@drawable/icon_nosotros"
                android:fontFamily="@font/baloo"
                android:text="NOSOTROS"
                android:textColor="#018778"
                android:textSize="20sp" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>