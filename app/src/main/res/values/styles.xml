<resources>

    <!-- Estilo para el fondo del formulario -->
    <style name="FormBackground">
        <item name="android:background">#EFEFEF</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Estilo para el ttulo de la boleta -->
    <style name="BoletaTitulo">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo para el texto de la boleta -->
    <style name="BoletaTexto">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Estilo para los botones de la boleta -->
    <style name="BoletaBoton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">#3498db</item>
        <item name="android:padding">12dp</item>
    </style>

</resources>
